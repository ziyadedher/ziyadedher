{
  "extends": [
    "next/core-web-vitals",
    "plugin:import/recommended",
    "plugin:import/typescript"
  ],

  "settings": {
    "import/resolver": {
      "typescript": true,
      "node": true
    }
  },

  "rules": {
    "import/order": "error",
    "prefer-destructuring": [
      "error",
      {
        "array": false,
        "object": true
      },
      {
        "enforceForRenamedProperties": false
      }
    ]
  }
}